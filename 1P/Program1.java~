import wheelsunh.users.*;
import java.awt.Color;

/** 
 * Program1.java:
 * Displays a pad for building a sea creature.
 *
 * @author Travis Calley
 * @assignment: 1P
 * 
 * mb 8/12
 * 
 */
public class Program1 
{
    
    //---------------- instance variables ------------------------------
    
    private Rectangle _pad;
    private RoundedRectangle _topFin;
    private Ellipse _rightFin, _leftFin;
    private Rectangle _backFin;
    private RoundedRectangle _fishBody;
    private Ellipse _eyeWhite;
    private Ellipse _pupil;
    private Rectangle _stripe1, _stripe2, _stripe3;
    
    
    // -----------------------------------------------------------------
    /** Constructor.
      */
    public Program1( )
    {
        _pad = new Rectangle();
        _pad.setFillColor( java.awt.Color.WHITE );
        _pad.setFrameColor( java.awt.Color.BLACK );
        _pad.setSize( 250, 250 );
        _pad.setLocation( Frame.getWidth() / 2 - _pad.getWidth() / 2, 
                         Frame.getHeight() / 2 - _pad.getHeight() / 2 );
        //-------------------------------------------------------------
        
        // add your code here
        _topFin = new RoundedRectangle(); 
        _topFin.setSize( 75, 25 );
        _topFin.setLocation( Frame.getWidth() / 2 - 35,
                            Frame.getHeight() / 2 - 65 );
        _topFin.setFillColor( Color.CYAN );
        _topFin.setFrameColor( Color.CYAN );
        
        _rightFin = new Ellipse();
        _rightFin.setSize( 75, 25 );
        _rightFin.setColor( Color.CYAN );
        _rightFin.setRotation( 15 );
        _rightFin.setLocation( Frame.getWidth() / 2 - 40,
                             Frame.getHeight() / 2 + 40 );
        
        _fishBody = new RoundedRectangle();
        _fishBody.setSize( 150, 100 );
        _fishBody.setColor( Color.YELLOW );
        _fishBody.setLocation( _pad.getXLocation() + _pad.getWidth() / 2
                                  - _fishBody.getWidth() / 2, 
                              _pad.getYLocation() + _pad.getHeight() / 2
                                  - _fishBody.getHeight() / 2 );
        
        _eyeWhite = new Ellipse(); 
        _eyeWhite.setSize( 15, 15 );
        _eyeWhite.setColor( Color.WHITE );
        _eyeWhite.setLocation( _fishBody.getXLocation() + 15,
                              _fishBody.getYLocation() + 15 );
        
        _pupil = new Ellipse();
        _pupil.setSize( 5, 5 );
        _pupil.setColor( Color.BLACK );
        _pupil.setLocation( _eyeWhite.getXLocation(),
                           _eyeWhite.getYLocation() + 
                           _eyeWhite.getHeight() / 2 );
        
        _backFin = new Rectangle(); 
        _backFin.setSize( 25, _fishBody.getHeight() - 20 );
        _backFin.setColor( Color.BLUE );
        _backFin.setLocation( _fishBody.getXLocation() + _fishBody.getWidth()
                                 - 10, _fishBody.getYLocation() + 
                             _backFin.getWidth() / 2 );
    
        _stripe1 = new Rectangle();
        _stripe1.setSize( 15, _fishBody.getHeight() );
        _stripe1.setColor( Color.BLUE );
        _stripe1.setLocation( _fishBody.getXLocation() + _fishBody.getWidth() 
                                 / 3, Frame.getHeight() / 2 - 
                             _fishBody.getHeight() / 2 );
        
        _stripe2 = new Rectangle(); 
        _stripe2.setSize( 15, _fishBody.getHeight() );
        _stripe2.setColor( Color.BLUE );
        _stripe2.setLocation( _fishBody.getXLocation() + ( _fishBody.getWidth()
                             / 3 ) * 2, Frame.getHeight() / 2
                                 - _fishBody.getHeight() / 2 );
        
        _stripe3 = new Rectangle(); 
        _stripe3.setSize( 15, _fishBody.getHeight() );
        _stripe3.setColor( Color.BLUE );
        _stripe3.setLocation( _fishBody.getXLocation() + _fishBody.getWidth()
                                 / 2, Frame.getHeight() / 2 
                                 - _fishBody.getHeight() / 2 );
        
        _leftFin = new Ellipse(); 
        _leftFin.setSize( 75, 25 );
        _leftFin.setColor( ( Color.CYAN ).darker() );
        _leftFin.setRotation( 10 );
        _leftFin.setLocation( _fishBody.getCenterX() - _fishBody.getWidth() 
                                 / 6, _fishBody.getYLocation() +
                             _fishBody.getHeight() - 10 );
    } 
    
    // -----------------------------------------------------------------
    /** main program just invokes the class constructor.
      * 
      * @param args String array
      * 
      */
    public static void main( String[] args )
    {
        new Frame( );
        Program1 app = new Program1();
    }
} //End of Class Program1